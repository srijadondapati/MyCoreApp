@page
@model MyCoreApp.Pages.IndexModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Birthday Invitation</title>
    <link href="~/css/styles.css" rel="stylesheet" /> <!-- Link to external CSS -->
</head>
<body>
    <div class="invitation-container">
        <!-- Header Section -->
        <div class="header">
            <h1>You're Invited to a Birthday 🎂 Celebration! 🎆</h1>
        </div>

        <!-- Birthday Person Section -->
        <div class="birthday-girl">
            <p>Join us in Celebrating The Birthday</p>
            <h1><strong style="color: #00ffc8;">@Model.BirthdayPerson</strong></h1>
        </div>

        <!-- Image Section -->
        <div class="birthday-image">
            <img src="~/images/chitti.jpg" alt="Birthday Celebration" />
        </div>

        <!-- Event Details Section -->
        <div class="event-details">
            <p><span>Venue:</span> @Model.Venue</p>
        </div>

        <!-- Special Guest Section -->
        <div class="special-guest">
            <p><span>Special Guest:</span> @Model.SpecialGuest</p>
        </div>

        <!-- Event Date Section -->
        <div class="event-date">
            <p>@Model.EventDate.ToString("dd MMM yyyy")</p>
        </div>

        <!-- RSVP Button and Count -->
        <div class="cta">
            <p>ra ra pakkana kurchooo</p>
            <a href="#" id="coming-button" onclick="vote()">Coming</a>
            <div class="vote-count" id="vote-count">Count: 0</div>
        </div>

        <!-- Footer Section -->
        <div class="footer">
            <p>nv raka pothe bagodhu chepthunaa, feel free to <a href="#">contact us</a>.</p>
        </div>
    </div>

    <script src="~/js/script.js"></script> <!-- Link to external JS -->
</body>
</html>
